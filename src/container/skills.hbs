{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>

  <main>
    <section>
      <div>
        {{>title big=true data='ALL skills'}}        
      </div>
    </section>
    
    <section>
      <ul>
      {{#each main.skills}}
      <li>
        {{name}}
        {{#if point includeZero=true}} ({{point}}) {{/if}}
        {{#if isTop}} (TOP) {{/if}}
        {{#unless point includeZero=true}} (NOT for study) {{/unless}}
        {{#unless point}} 
          {{#if point includeZero=true}}
          Study NOW
          {{/if}}
        {{/unless}}
      </li>
      {{/each}}
    </ul>
    </section>
    <section>
      <div>
        {{>title data='My hobbies'}}        
      </div>
    </section>
    
    <section>
      <ol>
        {{#each main.hobbies}}
          <li>
            {{name}}
            {{#if isMain}} ("FAV") {{/if}}
          </li>
        {{/each}}
      </ol>
    </section>
  </main>

</div>

