{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
        <div>
          {{>title big=true data='MY Education'}}        
        </div>
      </section>

      <section>
        <ul>
          {{#each edu}}
            <li>
              {{name}}
              {{#unless isEnd}} (Still study) {{/unless}}
            </li>
          {{/each}}
        </ul>
      </section>

      <section>
        <div>
          {{>title data='MY Certificates'}}        
        </div>
      </section>

      <section>
        <ul>
          {{#each cert}}
            <li>
              {{name}} ({{id}})
            </li>
          {{/each}}
        </ul>
      </section>
    </main>
  {{/with}}
</div>

