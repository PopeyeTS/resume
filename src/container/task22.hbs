<div>
  <main>

    <section>
      {{#with page_header}}
      <h1 class="text-center"> {{title}}</h1>
      <p class="text-uppercase text-center">{{description}}</p>
      {{/with}}
    </section>

    {{#with section}}
    <section>
      {{#with about_us}}
      <div class="card">
        <div class="card-body">
          {{#with title_list}}
          <div class="display-6 text-end">{{main}}</div>
          <h2 class="text-end">{{sub}}</h2>
          {{/with}}
          <br>
          {{#with button}}
          <button class="btn btn-outline-info">{{text}}</button>
          {{/with}}
        </div>
      </div>
      {{/with}}
    </section>

    <section>
      {{#with advantage}}
      <div class="card">
        <div class="display-5 text-muted" style="margin: 10px 10px;">{{title}}</div>
        <div class="card-body">
          {{#with efficiency}}
          <diV class="card">
            <div class="card-body">
              <div class="display-4 text-muted">{{title}} </div>
              <h6>{{sub_title}}</h6>
              <p>{{description}}</p>
              <br>
              <button class="btn btn-outline-warning">{{button}}</button>
            </div>
          </diV>
          {{/with}}
        </div>

        <div class="card" style="margin: 15px 15px;">
          {{#with innovation}}
          <div class="card-body">
            <div class="display-4 text-muted text-center">{{title}}</div>
            <h6 class="text-center">{{sub_title}}</h6>
            <p class="text-center">{{description}}</p>
            <button class="btn btn-outline-warning">{{button}}</button>
          </div>
          {{/with}}
        </div>

        <div class="card" style="margin: 15px 15px;">
          {{#with collaboration}}
          <div class="card-body">
            <div class="display-4 text-muted text-end">{{title}}</div>
            <h6 class="text-end">{{sub_title}}</h6>
            <p class="text-end">{{description}}</p>
            <button class="btn btn-outline-warning">{{button}}</button>
          </div>
          {{/with}}
        </div>
      </div>
      {{/with}}
    </section>

    <section>
      {{#with agreement}}
      <div class="card">
        <div class="card-body">
          <div class="display-5">{{title}}</div>
          <div class="card">
            <div class="card-body">
              {{#with info}}
              <h5>{{sub_title}}</h5>
              {{#with detail}}
              <div class="card">
                <div class="card-body">
                  <p>{{text}}</p>
                  <button class="btn btn-success">{{button}}</button>
                </div>
              </div>
              {{/with}}
              {{/with}}
            </div>
          </div>
        </div>
      </div>
      {{/with}}
    </section>
    {{/with}}

  </main>
</div>