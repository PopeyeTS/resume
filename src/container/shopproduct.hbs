    <section class="mx-3 my-1">

      <ol class="breadcrumb">
        {{#each breadcrumb}}
        <li class="breadcrumb-item">
          <a href={{url}}>{{name}}</a>
        </li>
        {{/each}}
      </ol>
    </section>

    <section class="mx-3 my-1">
      {{#with productData}}
      <div class="row">
        <div class="col-6">
          <div class="card">
            <img class="card-img-top p-1" src={{img}}>
            <div class="card-body my-1">
              {{#with info}}
              <div class="card-title"><b>{{title}}</b></div>
              <p>{{about}}</p>
              <p class="display-3">{{price}}</p>
              {{#each category}}
              {{#if isHot}}
              <div class="badge text-bg-warning">{{name}}</div>
              {{/if}}
              {{#if isNew}}
              <div class="badge text-bg-primary">{{name}}</div>
              {{/if}}
              {{#if isBonus}}
              <div class="badge text-bg-info">{{name}}</div>
              {{/if}}
              {{/each}}
              {{/with}}
            </div>
          </div>
        </div>
        <div class="col-1"></div>
        <div class="col-5">
          {{#with item}}
          <table class="table">
            {{#each head}}
            <th>{{this}}</th>
            {{/each}}
            {{#each body}}
            <tr>
              <td>{{[0]}}</td>
              <td>{{[1]}}</td>
              <td>{{[2]}}</td>
            </tr> {{/each}}
          </table>
          {{/with}}
          {{#with param}}
          <div class="card">
            <div class="card-header">{{title}}</div>
            <ul class="list-group">
              {{#each list}}
              <li class="list-group-item">
                {{this}}
              </li>
              {{/each}}
            </ul>
          </div>
          {{/with}}
          {{#with alert}}
          {{#if isError}}
          <div class="alert alert-danger my-1">{{text}}</div>
          {{/if}}
          {{/with}}
        </div>
      </div>
      <div class="card my-1">
        <div class="card-body">
          {{#each actionList}}
          {{#if isWarning}}
          <button class="btn btn-warning">{{name}}</button>
          {{/if}}
          {{#if isError}}
          <button class="btn btn-outline-danger">{{name}}</button>
          {{/if}}
          {{#if isSuccess}}
          <button class="btn btn-success">{{name}}</button>
          {{/if}}
          {{#if isGood}}
          <button class="btn btn-outline-success">{{name}}</button>
          {{/if}}
          {{/each}}
        </div>
      </div>
      {{/with}}
      <hr>
    </section>

    <section class="mx-3 my-1">
      {{#with goodsOtherBlock}}
      <h3 class="text-center">{{title}}</h3>
      <div class="row">
        {{#each cards}}
        <div class="col-4">
          {{>shopcard}}
